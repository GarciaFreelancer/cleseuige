
  <div class="col s12 m9 l5 offset-l1 card-panel mtmb">

    <%= form_with(model: subscription, local: true) do |form| %>
      <% if subscription.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

          <ul>
          <% subscription.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="input-field">
        <label>Nome completo</label>
        <%= form.text_field :name %>
      </div>

      <div class="input-field">
        <label>Telefone</label>
        <%= form.text_field :phone_number %>
      </div>

      <div class="input-field">
        <label>E-mail</label>
        <%= form.text_field :email %>
      </div>

      <div class="input-field">
        <label>Nível académico</label>
        <%= form.text_field :literary_habilitation %>
      </div>

      <div class="input-field">
        <label>Morada</label>
        <%= form.text_field :address %>
      </div>

      <div class="input-field">
        <%= form.label :classcourse_id %>
        <%= form.text_field :classcourse_id %>
      </div>

      <div class="input-field">
        <label>Descrição</label>
        <%= form.text_area :description, class: 'materialize-textarea' %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>