<%= form_with(model: classcourse, local: true) do |form| %>
  <% if classcourse.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(classcourse.errors.count, "error") %> prohibited this classcourse from being saved:</h2>

      <ul>
      <% classcourse.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :period %>
    <%= form.text_field :period %>
  </div>

  <div class="field">
    <%= form.label :available %>
    <%= form.check_box :available %>
  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.collection_select(:course_id, Course.all, :id, :name, {include_blank: 'Selecione o curso'}) %>
  </div>

  <div class="field">
    <%= form.label :former_id %>
    <%= form.collection_select(:former_id, Former.all, :id, :name, {include_blank: 'Selecione o formador'}) %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
