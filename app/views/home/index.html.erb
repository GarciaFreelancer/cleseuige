    </div>
  </div>
</section>



<div class="row">
<div class="container">
  <div class="col s12 m9 l10">
    

  
    <% @courses.each do |course| %>

      <div class="col s12 m6 l6">
        <div class="card">
          <div class="card-image">
            <%= image_tag course.image.url(:medium), class: 'img' %>
            <span class="card-title"><%= course.name %></span>
            <%= link_to 'add', course, class: 'btn-floating btn-small halfway-fab waves-effect waves-light red material-icons' %>
          </div>
          <div class="card-content">
            <p><%= course.price %> Kz</p>
            <p><%= course.description %></p>
          </div>
        </div>
      </div>

    <% end %>  
    
    <div class="row">
      <div class="container">
        <div class="col s12 m12 l12">
          <div class="center-align">
            <%= will_paginate @courses %>
          </div>
        </div>
      </div>
    </div>
  
    


  </div>
</div>
<div class="col hide-on-small-only m3 l2">
  <ul class="section table-of-contents">
    <h6 class="category">Categorias</h6>
    <% @categories.each do |category| %> 
      <li><a href="#introduction"><%= category.name %></a></li>
    <% end %>
  </ul>
  <%= will_paginate @categories %>
</div>
</div>

<%= render 'shared/footer' %>