<div class="row">
    <div class="container">
        <h5 class="center-align text-list">Lista de cursos de <%= @category.name %></h5>
        
        
            <% unless @list_courses != [] %>
                <h5>Esta categoria ainda n√£o possui um Curso</h5>
            <% end %>
        
        
                <div class="col s12 m9 l10">
                
                    <% @list_courses.each do |course| %>

                    <div class="col s12 m6 l6">
                        <div class="card">
                        <div class="card-image">
                            <%= image_tag course.image.url(:medium), class: 'img' %>
                            <span class="card-title"><%= truncate(course.name, length: 30, separator: '') %></span>
                            <%= link_to 'add', course, class: 'btn-floating btn-small halfway-fab waves-effect waves-light red material-icons' %>
                        </div>
                        <div class="card-content">
                            <p><%= course.price %> Kz</p>
                            <p><%= truncate(course.description, length: 40, separator: '') %></p>
                        </div>
                        </div>
                    </div>

                    <% end %> 

                    <div class="row">
                        <div class="container">
                            <div class="col s12 m12 l12">
                                <div class="center-align">
                                    <%= will_paginate @list_courses %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col hide-on-small-only m3 l2">
                    <ul class="section table-of-contents">
                        <h6 class="category">Categorias</h6>
                        <% @categories.each do |category| %> 
                        <li><%= link_to category.name, courses_category_path(category) %></li>
                        <% end %>
                    </ul>
                    <%= will_paginate @categories %>
                </div>

    </div>
</div>